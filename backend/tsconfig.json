{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",         // ES Modules
    "moduleResolution": "node",
    "outDir": "dist",           // compiled JS output
    "rootDir": "src",           // source files
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
